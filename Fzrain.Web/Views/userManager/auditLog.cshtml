<div class="container" ng-controller="auditController as vm">
    <div class="block-header">
        <h2>审核日志</h2>
    </div>

    <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            <div class="table-responsive">
                <table ng-table="vm.tableBasic" class="table table-striped table-vmiddle" show-filter="true">
                    <tr ng-repeat="log in $data">
                        <td data-title="'查看详情'" ng-show="vm.permission.detail">
                            <button data-toggle="modal" data-target="#modalAdultDetail" data-ng-click="vm.getAuditDetail(log.id)" class="btn btn-info waves-effect"><i class="zmdi zmdi-search"></i></button>
                        </td>
                        <td data-title="'服务名称'" filter="{ serviceName: 'text'}">{{log.serviceName}}</td>
                        <td data-title="'方法名称'" filter="{ methodName: 'text'}">{{log.methodName}}</td>
                        <td data-title="'Ip'">{{log.clientIpAddress}}</td>
                        <td data-title="'客户端'">{{log.clientName}}</td>
                        <td data-title="'浏览器'">{{log.browserInfo}}</td>
                    </tr>
                </table>
            </div>
        </div>
       </div>
    <div class="modal fade" id="modalAdultDetail" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">审计日志详情</h4>
                </div>

                <div class="modal-body">
                    <div class="form-body">
                        <h3 class="form-section">用户信息</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-sm-3">用户名:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.userId}}
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">IP地址:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.clientIpAddress}}
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">客户端:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.clientName}}
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">浏览器:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.browserInfo}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h3 class="form-section">操作信息</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-sm-3">服务:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.serviceName}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-sm-3">操作:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.methodName}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-sm-3">时间:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.executionTime|date:'yyyy-MM-dd HH:mm:ss'}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-sm-3">持续时间:</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static ng-binding">
                                            {{vm.detailLog.executionDuration}}
                                        </p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-sm-3">参数:</label>
                                    <div class="col-sm-9">
                                        <pre lang="js" class="ng-binding">{{vm.detailLog.parameters}}</pre>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h3 class="form-section">错误状态</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <p class="form-control-static ng-scope" ng-if="!vm.detailLog.exception">
                                            <i class="fa fa-check-circle" style="color: green;"></i> 成功
                                        </p>
                                        <p class="form-control-static ng-scope" ng-if="vm.detailLog.exception">
                                            <i class="fa fa-exclamation-circle" style="color: red;"></i> 失败
                                            <br/>
                                            {{vm.detailLog.exception}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal"><i class="zmdi zmdi-close-circle"></i>关闭</button>
                </div>
            </div>
        </div>
    </div>
</div>
